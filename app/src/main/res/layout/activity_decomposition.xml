<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mealme.mariahwang.com.myapplication.Decomposition">

    <ImageView
        android:id="@+id/imageDecompView"
        android:layout_width="275dp"
        android:layout_height="194dp"
        android:layout_marginEnd="47dp"
        android:layout_marginStart="62dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="278dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:text="What are the components of your meal?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintTop_toBottomOf="@+id/imageDecompView"
        tools:layout_editor_absoluteX="54dp" />

    <EditText
        android:id="@+id/userDecomps"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Bread, meat"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="85dp" />

    <Button
        android:id="@+id/decompDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/fui_done"
        app:layout_constraintTop_toBottomOf="@+id/userDecomps"
        tools:layout_editor_absoluteX="148dp" />
</android.support.constraint.ConstraintLayout>
